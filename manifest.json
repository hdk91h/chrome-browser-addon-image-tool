{
"manifest_version": 3,
"name": "Image-Size-Type-Tool ",
"author": "Hendrik Haustein",
"homepage_url": "https://haustein.in",
"version": "1.0.2",

//"default_locale": "en",

"description": "Change img filetype, reduce filesize.",
"icons": {
"500": "src/img/android-chrome-192x192.png"
},

"background": {

	"service_worker": "sw.js",
	"type": "module"

},

"action": {
"default_title": "Image-Tool"/*,
"default_popup": "popup.html"*/
},

"permissions": ["fileSystem", "downloads"]
}


